<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/from_draw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From drawable (mdpi)"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_100_draw"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="100" />

            <Button
                android:id="@+id/btn_300_draw"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="300" />

            <Button
                android:id="@+id/btn_600_draw"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="600" />

            <Button
                android:id="@+id/btn_900_draw"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="900" />

            <Button
                android:id="@+id/btn_1200_draw"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="1200" />

            <Button
                android:id="@+id/btn_2000_draw"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="2000" />

            <Button
                android:id="@+id/btn_5000_draw"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="5000" />

        </LinearLayout>

        <TextView
            android:id="@+id/from_xhdpi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From xhdpi"
            android:textColor="@android:color/black" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_100_xhdpi"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="100" />

            <Button
                android:id="@+id/btn_300_xhdpi"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="300" />

            <Button
                android:id="@+id/btn_600_xhdpi"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="600" />

            <Button
                android:id="@+id/btn_900_xhdpi"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="900" />

            <Button
                android:id="@+id/btn_1200_xhdpi"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="1200" />

            <Button
                android:id="@+id/btn_2000_xhdpi"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="2000" />

            <Button
                android:id="@+id/btn_5000_xhdpi"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="5000" />

        </LinearLayout>

        <TextView
            android:id="@+id/from_xxhdpi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From xxhdpi"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1200_xxhdpi"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="1200" />

            <Button
                android:id="@+id/btn_2000_xxhdpi"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="2000" />

            <Button
                android:id="@+id/btn_5000_xxhdpi"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="5000" />

        </LinearLayout>

        <TextView
            android:id="@+id/from_xxxhdpi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From xxxhdpi"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_900_xxxhdpi"
                android:layout_width="50dp"
